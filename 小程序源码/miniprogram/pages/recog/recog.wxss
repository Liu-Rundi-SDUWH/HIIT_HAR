.contain {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.sensor-item {
  flex: 1;
  padding-left: 30px;
  padding-right: 30px;
}

.list {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
}

.list .value {
  border: 1px solid #eee;
  padding: 0 30px;
  border-radius: 10px;
}

.list .btn {
  background: #09BB07;
  color: #fff;
  padding: 10px 15px;
  border-radius: 10px;
}

.title {
  margin-top: 6px;
  text-align: center;
  font-size: 25px;
  font-weight: 700;
  color:rgb(18, 71, 41);
}

.title_one {
  margin: 4px;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  color:rgb(18, 71, 41);
}

.title_two {
  margin: 6px;
  font-size: 14px;
  font-weight: 500;
  color:rgb(118, 9, 13);
}

.title_three {
  margin-left: 5px;
  font-size: 14px;
  font-weight: 500;
  color:rgb(118, 9, 13);
}

.flex-row {
  margin: 6px;
  display: flex;  /**指定flex 布局*/
  flex-direction:row; /**布局内item 方向*/
  flex-wrap:wrap; /**不够了就换行*/
  justify-content:space-between; /**主轴两边对其*/

}

.inputA {
  border:1px solid gainsboro;
  margin:20rpx;
  margin-top: 20rpx;
  padding: 0rpx 50rpx;
  border-radius: 100rpx;
  height: 70rpx;
  position: relative;
}

.btn_OK {
  margin: 60rpx;
  font-size: 30rpx;
}


